<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Marka Raporlama Tanımı List View -->
    <record id="view_marka_raporlama_tanimi_list" model="ir.ui.view">
        <field name="name">marka.raporlama.tanimi.list</field>
        <field name="model">marka.raporlama.tanimi</field>
        <field name="arch" type="xml">
            <list string="Marka Raporlama" editable="bottom">
                <field name="name"/>
                <field name="active" widget="boolean"/>
            </list>
        </field>
    </record>

    <!-- Marka Raporlama Tanımı Form View -->
    <record id="view_marka_raporlama_tanimi_form" model="ir.ui.view">
        <field name="name">marka.raporlama.tanimi.form</field>
        <field name="model">marka.raporlama.tanimi</field>
        <field name="arch" type="xml">
            <form string="Marka Raporlama">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_marka_raporlama_tanimi_search" model="ir.ui.view">
        <field name="name">marka.raporlama.tanimi.search</field>
        <field name="model">marka.raporlama.tanimi</field>
        <field name="arch" type="xml">
            <search string="Marka Raporlama">
                <field name="name" string="Marka Raporlama"/>
                <separator/>
                <filter name="active" string="Aktif" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Pasif" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_marka_raporlama_tanimi" model="ir.actions.act_window">
        <field name="name">Marka Raporlama</field>
        <field name="res_model">marka.raporlama.tanimi</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Servis kaydında kullanılacak marka raporlama tanımlarını buradan yönetin.
            </p>
        </field>
    </record>
</odoo>
