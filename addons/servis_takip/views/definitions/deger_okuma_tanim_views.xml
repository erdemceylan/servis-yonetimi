<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Değer Okuma Tanımı List View -->
    <record id="view_deger_okuma_tanimi_list" model="ir.ui.view">
        <field name="name">deger.okuma.tanimi.list</field>
        <field name="model">deger.okuma.tanimi</field>
        <field name="arch" type="xml">
            <list string="Değer Okuma" editable="bottom">
                <field name="name"/>
                <field name="active" widget="boolean"/>
            </list>
        </field>
    </record>

    <!-- Değer Okuma Tanımı Form View -->
    <record id="view_deger_okuma_tanimi_form" model="ir.ui.view">
        <field name="name">deger.okuma.tanimi.form</field>
        <field name="model">deger.okuma.tanimi</field>
        <field name="arch" type="xml">
            <form string="Değer Okuma">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_deger_okuma_tanimi_search" model="ir.ui.view">
        <field name="name">deger.okuma.tanimi.search</field>
        <field name="model">deger.okuma.tanimi</field>
        <field name="arch" type="xml">
            <search string="Değer Okuma">
                <field name="name" string="Değer Okuma"/>
                <separator/>
                <filter name="active" string="Aktif" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Pasif" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_deger_okuma_tanimi" model="ir.actions.act_window">
        <field name="name">Değer Okuma</field>
        <field name="res_model">deger.okuma.tanimi</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Servis kaydında kullanılacak değer okuma tanımlarını buradan yönetin.
            </p>
        </field>
    </record>
</odoo>
